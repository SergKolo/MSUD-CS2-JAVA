public class cs2hw2Soundex
{

 public String getSoundex ( String surname  )
    {
	surname = surname.toUpperCase();
        char[] surnameChars = surname.toCharArray();
        char initial = surnameChars[0];
        for (int i = 0 ; i < surnameChars.length; i++ )
            {
                switch (surnameChars[i])
                    {
                    case 'B':
                    case 'F':
                    case 'P':
                    case 'V':
                        surnameChars[i] = '1';
                        break;
                    case 'C':
                    case 'G':
                    case 'J':
                    case 'K':
                    case 'Q':
                    case 'S':
                    case 'X':
                    case 'Z':
                        surnameChars[i] = '2';
                        break;
                    case 'D':
                    case 'T':
                        surnameChars[i] = '3';
                        break;
                    case 'L':
                        surnameChars[i] = '4';
                        break;
                    case 'M':
                    case 'N':
                        surnameChars[i] = '5';
                        break;
                    case 'R':
                        surnameChars[i] = '6';
                        break;
                    default:
                        surnameChars[i] = '0';
                        break;
                    }
            }

        String output = "";
        for (int i = 1; i < surnameChars.length; i++)
            {
	/*	if ( i == 1 && surnameChars[1] == surnameChars[0] )
			output += surnameChars[i]; */
		if ( surnameChars[i] == '0' || surnameChars[i] == surnameChars[i-1] )
			continue;
                output += surnameChars[i];
            }
	output = initial +  output + "0000";

        return output.substring(0,4);
    }


}
